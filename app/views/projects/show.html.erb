<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Creator:</strong>
  <%= link_to @project.user.name, @project.user %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<h3 class="text-center">This project's tasks</h3>
<% if @project.tasks.exists? %>
  <div class="list-group projects-list">
    <% @project.tasks.each do |task| %>
      <%= link_to(task.title, project_task_path(@project, task), :class => "list-group-item") %>
    <% end %>
  </div>
<% else %>
  <h5 class="text-center">This project has no tasks!</h5>
<% end %>
<%= link_to (raw '<i class="fa fa-plus-circle" aria-hidden="true">
  </i> Create new task'), new_project_task_path(@project, @task) if 
  (can? :manage, Task) %>
