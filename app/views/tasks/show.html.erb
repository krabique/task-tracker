<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>Assigned developer:</strong>
  <% if @task.user %>
    <%= link_to @task.user.name, @task.user %>
  <% else %>
    none
  <% end %>
</p>

<p>
  <strong>Project:</strong>
  <%= link_to @task.project.title, @task.project %>
</p>

<%= link_to (fa_icon "pencil", text: 'Edit task'),
  edit_project_task_path(@project, @task) if can? :edit, @task%>
<br>
<%= link_to (fa_icon "arrow-left", text: 'Back to project'), project_path(@project) %>

<br><br>
<%= render "tasks/comments" %>
<br><br>
