<h3><%= @user.name %>'s profile</h3>
<p><strong>email:</strong> <%= @user.email %></p>
<p><strong>member since:</strong> <%= @user.created_at %></p>
<p><strong>last seen:</strong> <%= @user.last_sign_in_at %></p>

<p>
  <strong>role:</strong>
    <% if @user.manager_role? %>
      Manager
    <% else %>
      Developer
    <% end %>
</p>

<% if @user == current_user %>
  <%= link_to (fa_icon "pencil-square-o", text: 'Edit profile'), edit_user_registration_path %>
<% end %>
<br>
<%= link_to (fa_icon "arrow-left", text: 'Back'), :back %>
